<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="editFragment"
            type="com.example.memo.ui.edited.MemoEditedFragment" />

        <variable
            name="editViewModel"
            type="com.example.memo.ui.edited.MemoEditedViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@={editViewModel.title}" />

        <EditText
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:text="@={editViewModel.description}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_imageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_addMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> editViewModel.addMemo()}"
                android:text="add" />

            <Button
                android:id="@+id/btn_addImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> editViewModel.addImage(editFragment)}"
                android:text="album" />

            <Button
                android:id="@+id/btn_pictureImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> editViewModel.takePicture(editFragment)}"
                android:text="picture" />

        </LinearLayout>
    </LinearLayout>
</layout>